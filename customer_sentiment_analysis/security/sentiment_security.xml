<odoo>
  <data noupdate="0">
    <record id="module_category_sentiment" model="ir.module.category">
      <field name="name">Customer Sentiment Analysis</field>
      <field name="sequence">15</field>
    </record>

    <record id="group_sentiment_user" model="res.groups">
      <field name="name">Sentiment Analyst</field>
      <field name="category_id" ref="module_category_sentiment"/>
      <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_sentiment_manager" model="res.groups">
      <field name="name">Sentiment Manager</field>
      <field name="category_id" ref="module_category_sentiment"/>
      <field name="implied_ids" eval="[(4, ref('group_sentiment_user'))]"/>
    </record>

    <record id="sentiment_analysis_rule_user" model="ir.rule">
      <field name="name">Sentiment Analysis: My or Unassigned</field>
      <field name="model_id" ref="model_sentiment_analysis"/>
      <field name="domain_force">['|', ('assigned_user_id','=',user.id), ('assigned_user_id','=',False)]</field>
      <field name="groups" eval="[(4, ref('group_sentiment_user'))]"/>
      <field name="perm_read" eval="True"/>
      <field name="perm_write" eval="True"/>
      <field name="perm_create" eval="True"/>
      <field name="perm_unlink" eval="False"/>
    </record>

    <record id="sentiment_analysis_rule_manager" model="ir.rule">
      <field name="name">Sentiment Analysis: Manager All</field>
      <field name="model_id" ref="model_sentiment_analysis"/>
      <field name="domain_force">[(1,'=',1)]</field>
      <field name="groups" eval="[(4, ref('group_sentiment_manager'))]"/>
      <field name="perm_read" eval="True"/>
      <field name="perm_write" eval="True"/>
      <field name="perm_create" eval="True"/>
      <field name="perm_unlink" eval="True"/>
    </record>
  </data>
</odoo>
