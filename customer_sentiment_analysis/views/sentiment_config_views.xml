<odoo>
  <data>
    <record id="view_sentiment_config_tree" model="ir.ui.view">
      <field name="name">sentiment.config.tree</field>
      <field name="model">sentiment.config</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="api_provider"/>
          <field name="auto_analyze"/>
          <field name="active"/>
        </list>
      </field>
    </record>

    <record id="view_sentiment_config_form" model="ir.ui.view">
      <field name="name">sentiment.config.form</field>
      <field name="model">sentiment.config</field>
      <field name="arch" type="xml">
        <form string="Sentiment Configuration">
          <sheet>
            <group>
              <group>
                <field name="name"/>
                <field name="company_id"/>
                <field name="active"/>
              </group>
              <group>
                <field name="api_provider"/>
                <field name="api_key" password="True"/>
                <field name="api_endpoint"/>
              </group>
            </group>
            <group>
              <group>
                <field name="auto_analyze"/>
                <field name="sentiment_threshold"/>
              </group>
              <group>
                <field name="notify_negative"/>
                <field name="notification_users" widget="many2many_tags"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_sentiment_config" model="ir.actions.act_window">
      <field name="name">Configuration</field>
      <field name="res_model">sentiment.config</field>
      <field name="view_mode">tree,form</field>
    </record>
  </data>
</odoo>
